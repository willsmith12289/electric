<% cache ['store', Product.latest] do %>
  <% @products.each do |product| %>
    <% cache ['entry', product] do %>
      <div id="entry">
        <%= image_tag(product.image_url) %>
        <h3><%= product.title %></h3>
        <a href="https://www.homedepot.com<%= sanitize(product.description) %>"> Purchase </a>
        <div class="price_line">
          <span class="price"><%= number_to_currency(product.price) %></span>
          <%= form_tag(line_items_path(product_id: product), remote: true) do %>
            <%= label_tag 'quantity' %>
            <%= select_tag 'quantity', options_for_select(1..15) %>
            <%= submit_tag 'Add to Cart' %>
          <% end -%>
          <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }  %>
        </div>
      </div>
    <% end -%>
  <% end %>
<% end -%>